{% extends 'layouts/front.html.twig' %}

{% block title %}Forums!{% endblock %}

{% block body %}

    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">All forums :</th>
            </tr>
        </thead>
        <tbody>
            {% for forum in forums %}
            <tr class="trSurvol">
                <td><a href="{{ path('topic',{ 'idForum':forum.id }) }}">{{ forum.title }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    

{% endblock %}
